<body>
  <main class="card">
    <h1>Do you like ChatGPT?</h1>
    <div class="buttons">
      <button id="yes1">Yes</button>
      <button id="yes2">Yessssss</button>
    </div>
    <a class="link" href="#" id="resultLink">Click here to open this question in a new tab</a>
  </main>

  <script>
    // Both buttons show the same response. You can change behavior if you want.
    function handleYes(source){
      alert('Thanks! You clicked Yes (' + source + ').');
    }

    document.getElementById('yes1').addEventListener('click', function(){ handleYes('button 1'); });
    document.getElementById('yes2').addEventListener('click', function(){ handleYes('button 2'); });

    // Make the link open this same page (useful if you save it and want a shareable link)
    document.getElementById('resultLink').addEventListener('click', function(e){
      e.preventDefault();
      // If this file is hosted somewhere, replace window.location.href with that URL.
      const html = document.documentElement.outerHTML;
      const blob = new Blob([html], {type: 'text/html'});
      const url = URL.createObjectURL(blob);
      window.open(url, '_blank');
    });
  </script>
